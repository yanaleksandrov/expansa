{
    "name": "expansa-team/expansa",
    "description": "Expansa CMS",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "expansa/Yan",
            "email": "yanalexandrov@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-fileinfo": "*",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-iconv": "*",
        "ext-openssl": "*",
        "ext-zlib": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "dragonmantank/cron-expression": "^3.0",
        "squizlabs/php_codesniffer": "3.*",
        "spatie/image": "^3.7",
        "vimeo/psalm": "^5.26"
    },
    "scripts": {
        "post-install-cmd": [
            "if not exist expansa\\framework\\Images mkdir expansa\\framework\\Images",
            "xcopy /e /i /h /y vendor\\spatie\\image\\src\\* expansa\\framework\\Images\\Spatie\\Image",
            "xcopy /e /i /h /y vendor\\spatie\\image-optimizer\\src\\* expansa\\framework\\Images\\Spatie\\ImageOptimizer",
            "if not exist expansa\\framework\\Scheduler mkdir expansa\\framework\\Scheduler",
            "xcopy /e /i /h /y vendor\\dragonmantank\\cron-expression\\src\\* expansa\\framework\\Scheduler"
        ],
        "post-update-cmd": [
            "if not exist expansa\\framework\\Images mkdir expansa\\framework\\Images",
            "xcopy /e /i /h /y vendor\\spatie\\image\\src\\* expansa\\framework\\Images\\Spatie\\Image",
            "xcopy /e /i /h /y vendor\\spatie\\image-optimizer\\src\\* expansa\\framework\\Images\\Spatie\\ImageOptimizer",
            "if not exist expansa\\framework\\Scheduler mkdir expansa\\framework\\Scheduler",
            "xcopy /e /i /h /y vendor\\dragonmantank\\cron-expression\\src\\* expansa\\framework\\Scheduler"
        ]
    }
}
